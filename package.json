{
  "name": "express-log-sample",
  "version": "1.0.0",
  "description": "Error log system with Typescript, Express, MongoDB",
  "author": "Naoki Hirata",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts,ejs --exec npm run build-start",
    "start": "node .",
    "build-start": "npm-run-all build start",
    "build": "npm-run-all clean lint tsc copy-assets",
    "copy-assets": "ts-node tools/copyAssets",
    "tsc": "tsc",
    "clean": "node tools/clean.mjs",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "mongodb": "^6.2.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "short-uuid": "^4.2.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/module-alias": "^2.0.3",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.10",
    "@types/shelljs": "0.8.14",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "shelljs": "0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
